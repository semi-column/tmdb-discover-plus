{
  "name": "tmdb-discover-plus",
  "version": "2.7.3",
  "description": "TMDB Discover+ - Custom Catalog Builder for Stremio",
  "main": "server/src/index.ts",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "start": "node --experimental-strip-types server/src/index.ts",
    "build": "cd client && npm install && npm run build",
    "heroku-postbuild": "cd server && npm install && cd ../client && npm install --include=dev && npm run build",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "test": "cd server && npm test",
    "test:integration": "cd server && npm run test:integration",
    "format": "prettier --write .",
    "lint": "cd client && npm run lint",
    "prepare": "husky"
  },
  "keywords": [
    "stremio",
    "addon",
    "tmdb",
    "catalog",
    "discover",
    "movies",
    "tv-shows",
    "streaming"
  ],
  "author": "TMDB Discover+ Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/semi-column/tmdb-discover-plus.git"
  },
  "homepage": "https://github.com/semi-column/tmdb-discover-plus#readme",
  "bugs": {
    "url": "https://github.com/semi-column/tmdb-discover-plus/issues"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.8.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": "npx prettier --write",
    "client/src/**/*.{js,jsx}": "npx eslint --fix --config client/eslint.config.js"
  }
}
