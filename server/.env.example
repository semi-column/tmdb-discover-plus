# Server Environment Variables
# Copy to .env and configure

# === Required ===
ENCRYPTION_KEY=         # 64-char hex string
JWT_SECRET=             # Strong random string

# === TMDB ===
TMDB_API_KEY=           # Default TMDB API key (optional)

# === Server ===
PORT=7000
NODE_ENV=production
LOG_LEVEL=info

# === Database ===
# POSTGRES_URI=postgresql://postgres:postgres@localhost:5432/tmdb_discover
# MONGODB_URI=mongodb://localhost:27017/tmdb_discover

# === Cache ===
# REDIS_URL=redis://localhost:6379

# === IMDB Dataset ===
# IMDB_DATASET_DISABLED=false
# IMDB_DATASET_UPDATE_HOURS=24
# IMDB_DATASET_MIN_VOTES=1000
